{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build Server",
            "command": "/usr/bin/clang",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${workspaceFolder}/project_server.c",
                "-o",
                "${workspaceFolder}/project_server"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task to build the server executable."
        },
        {
            "type": "cppbuild",
            "label": "Build Peer",
            "command": "/usr/bin/clang",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${workspaceFolder}/peer.c",
                "-o",
                "${workspaceFolder}/peer"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task to build the peer executable."
        }
    ],
    "version": "2.0.0"
}
